<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-124dp"
        tools:layout_editor_absoluteY="59dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Titulo"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/cadenaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/msge"
            android:inputType="textPersonName"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/ResultadoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/msgr"
            android:inputType="textPersonName"
            android:textColorHint="@color/black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <RadioButton
                android:id="@+id/radioCadena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msgc" />

            <RadioButton
                android:id="@+id/radioCadenaR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msgcr" />
        </RadioGroup>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botont" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>